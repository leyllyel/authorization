<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication2.MainWindow"
        Title="AvaloniaApplication2">
	<StackPanel Margin="10" Background="Gray">
		<TextBlock Text="Введите данные для входа" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
		<TextBox Name="LoginBox" Watermark="Логин" Width="200" Margin="5" Background="LightGray" Foreground="Black" FontSize="14"/>
		<TextBox Name="PasswordBox" Watermark="Пароль" Width="200" Margin="5" Background="LightGray" Foreground="Black" FontSize="14"/>
		<Button Name="LoginButton" Content="Войти" Click="Button_Click_1" Margin="5" HorizontalAlignment="Center" Background="Black" Foreground="WhiteSmoke" FontSize="14"/>
		<TextBlock Name="ErrorMessage" Foreground="Red" FontSize="14" HorizontalAlignment="Center"/>
		
		<TextBlock Text="Забыли пароль?" FontSize="12"  HorizontalAlignment="Center" Margin="5, 10, 155, 5" Foreground="WhiteSmoke"  />
		<TextBlock Text="Зарегистрироваться" FontSize="12"  HorizontalAlignment="Center" Margin="100,-20, -20, 10" Foreground="WhiteSmoke" />
		

	</StackPanel>
</Window>
